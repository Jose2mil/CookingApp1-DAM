<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="scenes.initial.InitialController">
    <columnConstraints>
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
    </rowConstraints>
    <children>
        <BorderPane fx:id="borderPaneMainMenu" prefHeight="400.0" prefWidth="650.0">
            <center>
                <HBox alignment="BOTTOM_CENTER" prefHeight="100.0" prefWidth="200.0" spacing="45.0" BorderPane.alignment="CENTER">
                    <children>
                        <Button fx:id="btnRecipies" minWidth="120.0" mnemonicParsing="false" styleClass="mainBtn" text="Recipes" textFill="#5b3d04">
                            <font>
                                <Font name="System Bold" size="13.0" />
                            </font>
                        </Button>
                        <Button minWidth="120.0" mnemonicParsing="false" styleClass="mainBtn" text="Weekly Menu" textFill="#5b3d04">
                            <font>
                                <Font name="System Bold" size="13.0" />
                            </font>
                        </Button>
                        <Button minWidth="120.0" mnemonicParsing="false" styleClass="mainBtn" text="Shopping List" textFill="#5b3d04">
                            <font>
                                <Font name="System Bold" size="13.0" />
                            </font>
                        </Button>
                        <Button fx:id="pantryBtn" minWidth="120.0" mnemonicParsing="false" onAction="#showPantryScreen" styleClass="mainBtn" text="Pantry" textFill="#5b3d04">
                            <font>
                                <Font name="System Bold" size="13.0" />
                            </font>
                        </Button>
                    </children>
                    <BorderPane.margin>
                        <Insets bottom="20.0" />
                    </BorderPane.margin>
                </HBox>
            </center>
        </BorderPane>
    </children>
   <stylesheets>
      <URL value="@../general.css" />
      <URL value="@initial.css" />
   </stylesheets>
</GridPane>
